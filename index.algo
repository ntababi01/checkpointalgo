ALGORITHM LongestWordLength(string str)
VAR
i,curr_len,n,res:INTEGER;
BEGIN
 n := str.length();
 res := 0;
 curr_len := 0;
    for (int i := 0; i < n; i++) 
    {
        if (str[i] <> ' ')
            curr_len:=curr_len+1;
        else {
            res := max(res, curr_len);
            curr_len := 0;
        }
    }
    write(res);
}
 